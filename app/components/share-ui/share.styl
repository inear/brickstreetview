
.ShareUI {
  position:absolute;
  top: 0px;
  left: 0px;
  width:100%;
  height:100%;

}

.ShareUI-wrapper {
  position: absolute;
  width:100%;
  height:100%;
}

.ShareUI-bg {
  position:absolute;
  background: rgba(0,0,0,0.5);
  width:100%;
  height:100%;
  cursor: pointer;
}

.ShareUI-modal {
  position:relative;
  cursor: default;
  width: 497px;
  height: 433px;
  left:50%;
  top:50%;
  margin-left: -250px;
  margin-top: -256px;
  background: white;

  background-image: url('../images/ground_darkgrey_128.jpg');
  background-repeat: repeat;
  background-size:108px 108px;
  background-position: top left;
  box-shadow: inset 1px 1px 1px 1px rgba(255,255,255,0.2), 0 0 4px 4px rgba(0,0,0,0.3);
  border-radius:4px;

  img {
    width: 452px;
    height: 234px;
    left: 50%;
    margin-left: -226px;
    position: absolute;
    top: 67px;
  }
}

.ShareUI-close {
  position:absolute;
  cursor: pointer;
  right: -21px;
  top: -18px;
}

.ShareUI-content {
  position: absolute;
  top: 302px;
  left: 22px;
  width:452px;
}

.ShareUI-header {
  position:absolute;
  margin-top:22px;
  left:22px;
}

.ShareUI-imageUrl {
  overflow: hidden;
  white-space: nowrap;
  width: 322px;
  /* height: 43px; */
  /* width: 412px; */
  /* font-size: 16px; */
  font-family: Roboto, Arial, sans-serif;
  text-transform: lowercase;
  /* line-height: 34px; */
  cursor:text;
  user-select: text;
}

.shareUI-downloadImage {
  cursor: pointer;
}

.ShareUI-shareUrlLabel {
  float: left;
  margin-top: 22px;
  clear: both;
}

.ShareUI-shareUrl {
  clear:left;
  cursor:text;
  overflow: hidden;
  white-space: nowrap;
  height:43px;
  width: 259px;
  font-size:16px;
  font-family: Roboto, Arial, sans-serif;
  text-transform: lowercase;
  line-height:34px;

  user-select: text;
}

.ShareUI-icon {
  &:hover {
    transform:scale(1.1) translateY(-1px) rotate(3deg);
    box-shadow: 1px 5px 5px 0px rgba(0,0,0,0.3);
  }
}

.ShareUI-icons {
  float: left;
  margin-top: 0px;
  cursor:pointer;
}

svg {
  fill: #fff;
}

.ShareUI-icon--twitter {

  border:1px solid #6cc8f2;
  background: linear-gradient(-30deg, #68c5f0 0%, #47bbf0 100%);
  box-shadow: 1px 3px 3px 0px rgba(0,0,0,0.5);
  padding-top:8px;
}

.ShareUI-icon--gplus {

  border:1px solid #cb4f48;
  background: linear-gradient(-30deg, #cb4f48 0%, #b92d25 100%);
  box-shadow: 1px 3px 3px 0px rgba(0,0,0,0.5);
  padding-top:8px;
}

.ShareUI-icon--fb {
  border:1px solid #516aaa;
  background: linear-gradient(-30deg, #516aaa 0%, #33477a 100%);
  box-shadow: 1px 3px 3px 0px rgba(0,0,0,0.5);
  padding-top:8px;
}
