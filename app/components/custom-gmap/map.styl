}

@keyframes spin {
  from {transform:rotate(0deg);}
  to {transform:rotate(360deg);}
}

.CustomGMap-locationTitle {
  pointer-events:none;
  z-index:13;
  width:100%;
  height:50px;
  position:absolute;
  bottom:20px;
  text-transform:uppercase;
  font-size:20px;
  letter-spacing: 2px;
  font-family: 'Fredoka One', cursive;
  font-style: italic;
  font-weight:200;
  text-align:center;
  color:#FFFFF0;

  @media all and (max-width:600px)  {
    font-size:13px;
    letter-spacing: 2px;
  }

}

.CustomGMap-bubble
{
  position: absolute;
  width: 180px;
  height: 69px;
  padding: 23px;
  background: #fffff0;
  border-radius: 10px;
  font-size: 15px;
  letter-spacing: 1px;
  font-family: 'Fredoka One', cursive;
  font-style: italic;
  line-height: 22px;
  text-transform: uppercase;

  @media all and (max-width:800px)  {
    font-size: 10px;
    line-height: 18px;
    width: 115px;
    height: 39px;
    padding: 10px;
  }

  transition: opacity 0.2s;

   &.bubbleTransition-enter, &.bubbleTransition-leave {
    opacity:0;
  }
}

.CustomGMap-bubble:after
{
  content: '';
  position: absolute;
  border-style: solid;
  border-width: 10px 10px 10px 0;
  border-color: transparent #fff;
  display: block;
  width: 0;
  z-index: 1;
  left: -10px;
  top: 36px;

  @media all and (max-width:800px)  {
    border-width: 5px 5px 5px 0;
    top: 16px;
    left: -5px;

  }
}
