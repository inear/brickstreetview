.CustomGMap {

  top:0;
  left:0;
  background-color: #222222 !important;
}

.CustomGMap-container {

  transition-property: all;
  transition-duration: 0.4s;
  transition-timing-function: ease-in-out;
  transform: rotateX(0deg) scale(1);

  &.selected {
    transform: rotateX(10deg) scale(1.3);
  }
}

.CustomGMap-overlay {

  transform: translateZ(0);
  z-index:10;
  background-image: url('../images/brick-overlay.png');
  background-repeat: repeat;
  background-size:50px 50px;
  opacity:0.6;
  pointer-events:none;
}

.CustomGMap-gloss {
  pointer-events:none;
  z-index:11;
  background-image: linear-gradient(120deg, rgba(100,255,255,0.3), rgba(0,0,0,0));
}

.CustomGMap-three {
  pointer-events:none;
  z-index:12;
}

.CustomGMap-minifig {
  position:absolute;
  width:30px;
  height:50px;
  background:red;

  &.road {
    background:white;
  }
}
