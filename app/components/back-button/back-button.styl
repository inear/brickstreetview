.BackButton {

  transition: transform 0.1s ease-out;
  position:absolute;
  text-align:center;
  top: 30px;
  left: 30px;
  width:155px;
  height:53px;

  box-shadow: 0px 0px 2px 2px rgba(0,0,0,0.4);

  font-family: 'Fredoka One', cursive;

  border:0;
  background-image: url('../images/ground_darkgrey_128.jpg');
  background-repeat: repeat;
  background-position:1px 1px;
  background-size:64px 64px;
  border-radius:2px;

  cursor:pointer;

  &:hover {
    background-image: url('../images/ground_128.jpg');

    .BackButton-label {
      background: #008c45;
    }

  }

  &:focus {
    outline-style:none;
  }
}

.BackButton-label {
  position:absolute;
  color: #FFFFF0;
  display:block;
  background: #757a76;
  height:27px;
  width:127px;
  top:13px;
  left:15px;
  line-height:30px;
  letter-spacing:1px;
  font-size: 26px;

  &:hover {
    background: #008c45;
  }

}
