
.BackButton {
  position:absolute;
  top: -1px;
  right: 0px;
  width:73px;
  height:109px;
  background-image: url('../images/ground_darkgrey_128.jpg');
  background-repeat: repeat;
  background-size:108px 108px;
  background-position: top left;
  box-shadow: inset 1px 1px 1px 1px rgba(255,255,255,0.2), 0 0 4px 4px rgba(0,0,0,0.3);
  border-radius:4px;

  //transform: translateY(-100px);
  transition: all 0.2s ease-in-out;

  &.backButtonTransition-enter {
    transition: all 0.2s ease-in-out;
    transform: translateY(0px);
  }

  &.backButtonTransition-leave {
    transition: all 0.2s ease-in-out;
    transform: translateY(-100px);
  }
}

.BackButton-btn {

  //transition: transform 0.2s ease-out;
  position:absolute;
  text-align:center;
  width:44px;
  height:44px;
  left:21px;
  top:21px;
  box-shadow: 0px 0px 2px 2px rgba(0,0,0,0.4);
  border:0;
  background: linear-gradient(-10deg, #ddd7a7 0%, #fff 100%);
  border-radius:2px;

  &:before {
    cursor:pointer;
    content:"";
    width:40px;
    height:40px;
    left:2px;
    top:2px;
    position:absolute;
    background-image: url('../images/map.jpg');
    background-repeat: no-repeat;
    background-size:40px 40px;
  }

  &:hover {
    transform:scale(1.1);

    .BackButton-label {
      transform:scale(1.1) translateY(-1px) rotate(3deg);
      box-shadow: 1px 5px 5px 0px rgba(0,0,0,0.3);
    }
  }

  &:focus {
    outline-style:none;
  }
}


