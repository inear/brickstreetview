.Loader {
  text-align:center;
  pointer-events:none;
  overflow:hidden;
}

.Loader-symbol {

  opacity: 1;

  transition: all 0.8s ease-out;

  &.fade-enter, &.fade-leave {
    opacity: 1;
  }

}

.Loader-LegoPlate {

  .Loader-LegoPlate-door {
    position:absolute;
    height:50%;
    width:100%;
    background-image: url('../images/ground_128.jpg');
    background-repeat: repeat;
    background-size:128px 128px;
    transition:all 0.4s ease-out;
  }

  .Loader-LegoPlate-door--Top {
    top:0;

    .slide-enter &, .slide-leave &  {
      transform:translateY(-100%);
    }

  }

  .Loader-LegoPlate-door--Bottom {
    bottom:0;

    .slide-enter &, .slide-leave & {
      transform:translateY(100%);
    }

  }
}
