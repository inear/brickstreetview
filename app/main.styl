$pegWidth = 22px

.LegoTile {
  float: left;
  padding: 4px;
  background: linear-gradient(-10deg, #ddd7a7 0%, #fff 100%);
  height: 22px;

  margin-right: 21px;
  border:1px solid #F7E3E3;
  box-shadow: inset 1px 1px 1px 1px #fff, 0px 3px 3px 0px rgba(0,0,0,0.2);;
  border-radius:1px;
  text-transform:uppercase;
  font-size:12px;
  letter-spacing: 2px;
  font-family: 'Fredoka One', cursive;
  font-style: italic;
  text-align:center;
  color:#333333;

}

.LegoTile-pegs2 {
  width: $pegWidth * 2 - 1;
}

.LegoTile-pegs3 {
  width: $pegWidth * 3- 1;
}

.LegoTile-pegs4 {
  width: $pegWidth * 4 - 1;
}

.LegoTile-pegs5 {
  width: $pegWidth * 5 - 2;
}

.LegoTile-pegs6 {
  width: $pegWidth * 6 - 2;
}

.Top {

  position:absolute;
  top: -14px;
  left: 0px;
  width: 100%;
  height:45px;

  background-image: url('../images/sky_128.jpg');
  background-repeat: repeat;
  background-size:108px 108px;
  background-position: top left;
  box-shadow: inset 1px 1px 1px 1px rgba(255,255,255,0.2), 0 0 4px 4px rgba(0,0,0,0.3);
  border-radius:4px;
  //transform: rotate(-10deg);

}

.Top-logo {
  position:absolute;
  left: 22px;
  bottom: -2px;
  color: #FFFFF0;
  font-family: 'Fredoka One', cursive;
  font-size: 20px;
  text-transform:uppercase;

  ul {

    display: inline-block;

    li {
      margin-right: 0px;
    }
  }
}

