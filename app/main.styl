.grab {
  cursor: grab;
  cursor: -webkit-grab;
  cursor: -moz-grab;
  cursor: url('http://s3.amazonaws.com/urbanjungle/images/openhand.cur'), move;
}

.grabbing {
  cursor: grab;
  cursor: -webkit-grabbing;
  cursor: -moz-grabbing;
  cursor: url('http://s3.amazonaws.com/urbanjungle/images/closedhand.cur'), move;
}

.u-LegoButton {
  cursor:pointer;

  &:focus {
    outline-style:none;
  }

  &:hover {
    transform-origin: 50% 0;
    transform: translateY(-2px) scale(1.05) rotateX(4deg) rotateZ(2deg);
  }
}

$pegWidth = 22px

.LegoTile {
  float: left;
  padding: 4px;
  background: linear-gradient(-10deg, #ddd7a7 0%, #fff 100%);
  height: 22px;

  margin-right: 21px;
  border:1px solid #F7E3E3;
  box-shadow: inset 1px 1px 1px 1px #fff, 1px 3px 3px 0px rgba(0,0,0,0.2);
  border-radius:1px;
  text-transform:uppercase;
  font-size:12px;
  letter-spacing: 2px;
  font-family: 'Fredoka One', cursive;
  font-style: italic;
  text-align:center;
  color:#333333;

}

.LegoTile--yellow {
  border:1px solid #d6b530;
  background: linear-gradient(-10deg, #d6b530 0%, #f1e6ba 100%);
  box-shadow: inset 1px 1px 1px 1px #f7db68, 1px 3px 3px 0px rgba(0,0,0,0.5);
}

.LegoTile2x2 {
  float: left;
  padding: 0px;
  background: linear-gradient(-10deg, #ddd7a7 0%, #fff 100%);
  height: 42px;
  width: 42px;
  border:1px solid #F7E3E3;
  box-shadow: inset 1px 1px 1px 1px #fff, 0px 3px 3px 0px rgba(0,0,0,0.2);;
  border-radius:1px;
  text-transform:uppercase;
  font-size:22px;
  letter-spacing: 2px;
  font-family: 'Fredoka One', cursive;
  font-style: italic;
  text-align:center;
  color:#333333;
}

.LegoTile2x2--round {
  border-radius:21px;
}

.LegoTile-round {
  width: $pegWidth;
  border-radius:$pegWidth*0.5;
}

.LegoTile-pegs1 {
  width: $pegWidth * 1;
}

.LegoTile-pegs2 {
  width: $pegWidth * 2 - 1;
}

.LegoTile-pegs3 {
  width: $pegWidth * 3- 1;
}

.LegoTile-pegs4 {
  width: $pegWidth * 4 - 2;
}

.LegoTile-pegs5 {
  width: $pegWidth * 5 - 2;
}

.LegoTile-pegs6 {
  width: $pegWidth * 6 - 2;
}

.LegoTile-pegs7 {
  width: $pegWidth * 7 - 2;
}

.LegoTile-pegs8 {
  width: $pegWidth * 8 - 2;
}

.LegoTile-pegs9 {
  width: $pegWidth * 9 - 4;
}

.LegoTile-pegs10 {
  width: $pegWidth * 10 - 2;
}

.LegoTile-margin0 {
  margin-right: 0px;
}

.LegoTile-margin1 {
  margin-right: 21px;
}

