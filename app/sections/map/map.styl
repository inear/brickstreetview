.Map-ui-menu {

  position:absolute;
  right:-5px;
  bottom: 10%;
  width:57px;
  height:152px;

  background-image: url('../images/ground_128.jpg');
  background-repeat: repeat;
  background-size:108px 108px;
  background-position: top left;
  box-shadow: inset 1px 1px 1px 1px rgba(255,255,255,0.2), 0 0 4px 4px rgba(0,0,0,0.3);
  border-radius:4px;
  transform: rotate(1deg);
}

.Map-LocationButton {

  //transition: transform 0.2s ease-out;
  position:absolute;
  text-align:center;
  width:44px;
  height:44px;
  left:0px;
  top:21px;
  box-shadow: 0px 0px 2px 2px rgba(0,0,0,0.4);
  border:0;
  background: linear-gradient(-10deg, #ddd7a7 0%, #fff 100%);
  border-radius:2px;

  &:before {
    cursor:pointer;
    content:"";
    width:40px;
    height:40px;
    left:2px;
    top:2px;
    position:absolute;
    background-image: url('../images/compass.png');
    background-repeat: no-repeat;
    background-size:40px 40px;
  }
}

.Map-ZoomControls {
  position:absolute;
  top: 66px;
  left: 1px;
  width:25px;
}

