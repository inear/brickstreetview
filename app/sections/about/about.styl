.About {
  position: absolute;
  width: 100%;
  height: 100%;

  background-image: url('../images/tile_black.jpg');
  background-repeat: repeat;
  background-size:108px 108px;
  background-position: top left;
  overflow:none;
}

.AboutContent {
  background:#ffffff;
  margin: 0 auto;
  padding:40px;
  width:80%;
  height:100%;
  overflow: auto;
  max-width:640px;
  color:#000000;
  font-family:'Roboto';
  font-size:14px;
  line-height:18px;

  h1 {
    font-size: 30px;
    font-family:'Fredoka One';

  }

  h2 {
    font-size: 19px;
    margin-bottom:6px;
    margin-top:40px;
    font-family:'Fredoka One';
  }

  p {
    margin: 10px 0;
    line-height:20px;
  }
}
